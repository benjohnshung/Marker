<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.Marker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.Marker"
    xmlns:local2="clr-namespace:MAUI.Marker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Marker">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Courses"
        ContentTemplate="{DataTemplate local2:CoursesView}"
        Route="Courses" />
    <ShellContent
        Title="Add Course"
        ContentTemplate="{DataTemplate local2:AddCourseView}"
        Route="AddCourse" />

</Shell>
